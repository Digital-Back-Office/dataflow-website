<style>

.scroller {
  overflow: hidden;
  position: relative;
  width: 500px;
  height: 120px;
}

.text {
  position: absolute;
  width: 100%;
  top: 100%;
  animation: scroll 10s infinite;
}

.text:nth-child(1) {
  animation-delay: 0s;
}

.text:nth-child(2) {
  animation-delay: 2s;
}

.text:nth-child(3) {
  animation-delay: 4s;
}

.text:nth-child(4) {
  animation-delay: 6s;
}

.text:nth-child(5) {
  animation-delay: 8s;
}

@keyframes scroll {
  0% {
    top: 100%;
    opacity: 0;
    
  }
  10% {
    top: 10%;
    opacity: 1;
  }
  30% {
    top: 10%;
    opacity: 0;
  }
  40% {
    top: 0%;
    opacity: 0;
  }
  100% {
    top: 0%;
    opacity: 0;
  }
}

.outerspin{
  animation: outerspin 5s linear infinite;

}
.innerspin{
  animation: innerspin 5s linear infinite;

}
@keyframes outerspin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(-360deg); }
}
@keyframes innerspin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}


.circle1{
  animation: colorchange 5s linear infinite;
}
.circle2{
  
  animation: colorchange 5s linear infinite;
  animation-delay: 1s;
}
.circle3{
  
  animation: colorchange 5s linear infinite;
  animation-delay: 1.8s;
}
.circle4{
  
  animation: colorchange 5s linear infinite;
  animation-delay: 2.5s;
}
.circle5{
  
  animation: colorchange 5s linear infinite;
  animation-delay: 3.5s;
}
.circle6{
  
  animation: colorchange 5s linear infinite;
  animation-delay: 4.3s;
}
@keyframes colorchange {
  5% {
    background-color: rgba(255, 255, 255, 0.9);
   }
  70%{
    background-color: #C0FFFF;
  }
  
}

    .show-slide-up {
      transition: fadeInDown 1s ease-in-out, opacity 1s ease-in-out;
    }
    @keyframes fadeInDown {
   0% {
      opacity: 0;
      transform: translateY(-20px);
   }
   100% {
      opacity: 1;
      transform: translateY(0);
   }
} 


</style>
<script>
  window.addEventListener('scroll', () => {
