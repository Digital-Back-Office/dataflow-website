---
import Animationsandclock from "../components/Animationsandclock.astro";
import Layout from "../layouts/Layout.astro";
import Arrowright from '../../public/arrowright.svg';

---

<Layout title="helloworld">
  <div
    class="2xl:h-[700px] flex items-center bg-[#30BABA] xl:h-[650px] lg:h-[600px]"
  >
    <div class="w-3/5 pl-32 2xl:pl-24 xl:pl-20">
      <p
        class="2xl:text-[90px] text-[#C0FFFF] font-bold leading-none xl:text-[80px] lg:text-[70px]"
        style="font-family:Helvetica Neue"
        >Get data platform <br /> ready in less than<br /></p>
      <p
        class="2xl:text-[210px] text-[#0B7474] font-bold leading-none lg:text-[150px] xl:[180px]"
        style="font-family:Helvetica Neue">Thirty<br />Minutes</p>
    </div>
    <div class="absolute right-24 pr-24 overflow-hidden">
      <Animationsandclock />
    </div>
  </div>
  <div class="h-[100vh] w-full flex justify-center">
    <div class="h-full w-6/12  overflow-hidden flex items-center justify-center">
      <div class="w-[500px] h-[500px] border rounded-full border-gray-300 z-0 border-dashed border-2 relative">
        <div class="h-[75px] w-[75px] bg-white rounded-full absolute top-[80px] left-2 z-20 shadow-md circle1"> <img src="/theia-ide.png"/></div>
        <div class="h-[75px] w-[75px] bg-white rounded-full absolute bottom-[80px] left-2 z-10 shadow-md circle2 p-4"> <img src="/star.png"/></div>
        <div class="h-[75px] w-[75px] bg-white rounded-full absolute top-[80px] right-2 z-10 shadow-md circle5 py-5 px-1"> <img src="/miflow.png"/></div>
        <div class="h-[75px] w-[75px] bg-white rounded-full absolute bottom-[80px] right-2 z-10 shadow-md circle4 p-5"> <img src="/dbt.png"/></div>
        <div class="h-[75px] w-[75px] bg-white rounded-full absolute left-[210px] bottom-[460px] shadow-md z-10 circle6"> <img src="/dashapps.png"/></div>
        <div class="h-[75px] w-[75px] bg-white rounded-full absolute right-[210px] top-[460px] z-10 shadow-md circle3 p-5 pb-6"> <img src="/pytorch.png"/></div>

        <div class="h-full w-full rounded-full  outerspin ">
           <div class="h-8 w-8 bg-white rounded-full z-10 absolute top-10 left-[75px] drop-shadow-lg"></div>
           <div class="h-full w-full  rounded-full innerspin  flex items-center justify-center">
            <div class="h-52 w-52 bg-white border  border-gray-300 border-dashed border-2 outerspin  rounded-full relative">
              <div class="h-[75px] w-[75px] bg-white rounded-full absolute left-0  z-10 shadow-md"> <img src="/jupyter.png"/></div>
              <div class="h-[75px] w-[75px] bg-white rounded-full absolute left-[155px] top-12 z-10 shadow-md p-3"> <img src="/apache airflow.png"/></div>
              <div class="h-[75px] w-[75px] bg-white rounded-full absolute top-[155px] left-12 z-10 shadow-md p-5"> <img src="/dash.png"/></div>
            </div>

           </div>
        </div>

      </div>

    
    </div>
    <div class="h-full w-5/12  flex flex-col justify-center items-start">
      <p class="font-bold text-black text-[80px] leading-none mb-20" style="font-family: Roboto;">
        Best in class<br />tools in one<br />platform like
      </p>
    <div class="scroller">
      <div class="text">  <p class="font-bold text-[100px] leading-none italic text-[#30BABA]" style="font-family: Roboto;">
        Airflow
      </p></div>
      <div class="text">  <p class="font-bold text-[100px] leading-none italic text-[#FFA500]" style="font-family: Roboto;">
        Miflow
      </p></div>
       <div class="text">  <p class="font-bold text-[100px] leading-none italic text-[#4169E1] " style="font-family: Roboto;">
        Theia IDE
      </p></div>
      <div class="text">  <p class="font-bold text-[100px] leading-none italic text-[#32CD32] " style="font-family: Roboto;">
        Jupyter
      </p></div>
      <div class="text">  <p class="font-bold text-[100px] leading-none italic text-[#FFD700] " style="font-family: Roboto;">
        DBT
      </p></div>
    </div>



      <button class="bg-white px-3 py-2 text-[#30BABA] rounded-lg shadow-md flex text-lg items-center gap-x-2 mt-14" style="font-family: Roboto;">Learn more <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <g id="arrow_upward" clip-path="url(#clip0_2446_31566)">
          <path id="Vector" d="M12 4L10.59 5.41L16.17 11L4 11V13L16.17 13L10.58 18.58L12 20L20 12L12 4Z" fill="#30BABA"/>
        </g>
        <defs>
          <clipPath id="clip0_2446_31566">
            <rect width="24" height="24" fill="white" transform="matrix(0 1 -1 0 24 0)"/>
          </clipPath>
        </defs>
      </svg> </button>
    </div>
  </div>
  
</Layout>
<style>

.scroller {
  overflow: hidden;
  position: relative;
  width: 500px;
  height: 120px;
}

.text {
  position: absolute;
  width: 100%;
  top: 100%;
  animation: scroll 10s infinite;
}

.text:nth-child(1) {
  animation-delay: 0s;
}

.text:nth-child(2) {
  animation-delay: 2s;
}

.text:nth-child(3) {
  animation-delay: 4s;
}

.text:nth-child(4) {
  animation-delay: 6s;
}

.text:nth-child(5) {
  animation-delay: 8s;
}

@keyframes scroll {
  0% {
    top: 100%;
    opacity: 0;
    
  }
  10% {
    top: 10%;
    opacity: 1;
  }
  30% {
    top: 10%;
    opacity: 0;
  }
  40% {
    top: 0%;
    opacity: 0;
  }
  100% {
    top: 0%;
    opacity: 0;
  }
}

.outerspin{
  animation: outerspin 5s linear infinite;

}
.innerspin{
  animation: innerspin 5s linear infinite;

}
@keyframes outerspin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(-360deg); }
}
@keyframes innerspin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}


.circle1{
  animation: colorchange 5s linear infinite;
}
.circle2{
  
  animation: colorchange 5s linear infinite;
  animation-delay: 1s;
}
.circle3{
  
  animation: colorchange 5s linear infinite;
  animation-delay: 1.8s;
}
.circle4{
  
  animation: colorchange 5s linear infinite;
  animation-delay: 2.5s;
}
.circle5{
  
  animation: colorchange 5s linear infinite;
  animation-delay: 3.5s;
}
.circle6{
  
  animation: colorchange 5s linear infinite;
  animation-delay: 4.3s;
}
@keyframes colorchange {
  5% {
    background-color: rgba(106, 244, 244, 0.9);
   }
  70%{
    background-color: rgba(249, 249, 249, 0.9);
  }
  
}

</style>
