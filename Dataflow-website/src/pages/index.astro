---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
---

<Layout title="Welcome to Astro.">
	<main>
		<!-- Activity indicator with a circle inside it -->
		<div class="activity-indicator">
		  <div class="activity-indicator-anti">
			<div class="circle">
				<div class="outer1">
					  <div class="circlebox">
						<div class="circleitem" style="animation: moveUpDown1 2s ease-in-out infinite;"></div>
						<div class="circleitem" style="animation: moveUpDown3 2s ease-in-out infinite; "></div>
						<div class="circleitem" style="animation: moveUpDown2 2s ease-in-out infinite;"></div>
					  </div>
					  <div class="circlebox">
						<div class="circleitem" style="animation: moveUpDown2 2s ease-in-out infinite;"></div>
						<div class="circleitem" style="animation: moveUpDown4 2s ease-in-out infinite;"></div>
						<div class="circleitem" style="animation: moveUpDown2 2s ease-in-out infinite; "></div>
						<div class="circleitem" style="animation: moveUpDown4 2s ease-in-out infinite;"></div>
						<div class="circleitem" style="animation: moveUpDown2 2s ease-in-out infinite;"></div>
					  </div>
					  <div class="circlebox">
						<div class="circleitem" style="animation: moveUpDown4 2s ease-in-out infinite;"></div>
						<div class="circleitem" style="animation: moveUpDown2 2s ease-in-out infinite;"></div>
						<div class="circleitem" style="animation: moveUpDown2 2s ease-in-out infinite;"></div>
						<div class="circleitem" style="animation: moveUpDown1 2s ease-in-out infinite; "></div>
						<div class="circleitem" style="animation: moveUpDown2 2s ease-in-out infinite;"></div>
						<div class="circleitem" style="animation: moveUpDown2 2s ease-in-out infinite;"></div>
						<div class="circleitem" style="animation: moveUpDown4 2s ease-in-out infinite;"></div>
					  </div>
					  <div class="circlebox">
						<div class="circleitem" style="animation: moveUpDown5 2s ease-in-out infinite;"></div>
						<div class="circleitem" style="animation: moveUpDown4 2s ease-in-out infinite;"></div>
						<div class="circleitem" style="animation: moveUpDown2 2s ease-in-out infinite; "></div>
						<div class="circleitem" style="animation: moveUpDown4 2s ease-in-out infinite;"></div>
						<div class="circleitem" style="animation: moveUpDown5 2s ease-in-out infinite;"></div>
					  </div>
					  <div class="circlebox">
						<div class="circleitem"></div>
						<div class="circleitem" style="animation: moveUpDown3 2s ease-in-out infinite;"></div>
						<div class="circleitem"></div>
					  </div>
				</div>
				<div class="outer2">
					<div class="innerstick1" style="animation: innerstick1 2s ease-in-out infinite;" ></div>
					<div class="innerstick2" style="animation: innerstick2 2s ease-in-out infinite;"></div>
					<div class="innerstick3" style="animation: innerstick3 2s ease-in-out infinite;"></div>
					<div class="innerstick4" style="animation: innerstick4 2s ease-in-out infinite;"></div>
					<div class="innerstick3" style="animation: innerstick3 2s ease-in-out infinite;"></div>
					<div class="innerstick2" style="animation: innerstick2 2s ease-in-out infinite;"></div>
					<div class="innerstick1" style="animation: innerstick1 2s ease-in-out infinite;"></div>

				</div>
			</div>	
		  </div>
		</div>
	  </main>
</Layout>

<style>
main {
  margin: auto;
  padding: 1rem;
  width: 800px;
  max-width: calc(100% - 2rem);
  color: white;
  font-size: 20px;
  line-height: 1.6;
}

.activity-indicator-anti { /* Corrected class name */
  position: relative;
  width: 460px;
  height: 460px;
  /* border: 2.5px solid #1fb8a9;
  border-top: 2.5px solid #9ceae2;
  border-left: 2.5px solid #9ceae2;
  border-radius: 50%; */
  animation: antispin 1.5s linear infinite;
  display: flex;
  justify-content: center;
  align-items: center;
}

.activity-indicator {
position: relative;
  width: 460px;
  height: 460px;
  border: 6.5px solid #1fb8a9;
  border-top: 6.5px solid #209999;
  border-left: 6.5px solid #2a9f9fec;
  border-bottom: 6.5px solid #37a9a9f5;
  border-radius: 50%;
  animation: spin 1.5s linear infinite;
  display: flex;
  justify-content: center;
  align-items: center;
}

.circle {
	position: relative;
  width: 460px;
  height: 460px;
  background-color: #1fb8a9;
  border-radius: 50%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-image:url("/sandclock.png");
  background-repeat: no-repeat;
  background-position: center;
  background-size:65% 65% ;
  z-index: 1;
 
}
.circlebox{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  
}
.circleitem{
	background-color: #209999;
	height: 14px;
	width: 14px;
	border-radius: 50%;
	margin:5px;
	z-index: 0;
	
}

.outercircle{
	width: 70%;
	height: 50%;
	

}
.outer1{
	padding-top:100px;
	width: 80%;
	height: 40%;
	
	
	
}
.outer2{
	
	width: 80%;
	height: 40%;
	display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: start;
  padding-bottom: 100px;
	
}
.innerstick1{
   width: 14px;
   height: 35px;
   background-color: #209999;
   border-radius: 20px;
   margin: 8px;
   margin-top:45px;
   margin-left: 7px;
   margin-right: 7px;
}
.innerstick2{
   width: 14px;
   height: 66px;
   background-color: #209999;
   border-radius: 20px;
   margin: 8px;
   margin-top:30px;
   margin-left: 7px;
   margin-right: 7px;
}

.innerstick3{
   width: 14px;
   height: 96px;
   background-color: #209999;
   border-radius: 20px;
   margin: 8px;
   margin-left: 7px;
   margin-right: 7px;

}
.innerstick4{
   width: 14px;
   height: 117px;
   background-color: #209999;
   border-radius: 20px;
   margin: 8px;
   margin-top: 5px;
   margin-left: 7px;
   margin-right: 7px;

}
@keyframes moveUpDown1 {
	0%, 100% {
            transform: translateY(0);
        }
        33% {
            transform: translateY(20px);
        }
		43%{
			transform: translateY(20px);
		}
        66% {
            transform: translateY(40px);
        }
    }
	@keyframes moveUpDown3 {
	0%, 30%,100% {
            transform: translateY(0);
        }
        33% {
            transform: translateY(10px);
        }
        66% {
            transform: translateY(40px);
        }
    }

	@keyframes moveUpDown2 {
	0%,20%, 100% {
            transform: translateY(0);
        }
		
        50% {
            transform: translateY(30px);
        }
    }
	@keyframes moveUpDown4 {
	0%,25%, 100% {
            transform: translateY(0);
        }
		
        50% {
            transform: translateY(15px);
        }
    }
	@keyframes moveUpDown5 {
	0%,20%, 100% {
            transform: translateY(0);
        }
		
        50% {
            transform: translateY(10px);
        }
    }

	@keyframes innerstick4{
		0%,99%{
			transform: translateY(20px);
			height: 120px;
		}
		100% {
			height: 117px;
            transform: translateY(0px);
        }
		
    }
	@keyframes innerstick3{
		20%,99%{
			transform: translateY(20px);
			height: 115px;
		}
		100% {
            transform: translateY(0px);
        }
    }
	@keyframes innerstick2{
		40%,99%{
			transform: translateY(20px);
			height: 100px;
		}
		100% {
            transform: translateY(0px);
        }
    }
	@keyframes innerstick1{
		60%,99%{
			transform: translateY(20px);
			height: 84px;
		}
		100% {
            transform: translateY(0px);
        }
    }
	
  
@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

@keyframes antispin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(-360deg); }
}

</style>
