---
import { getEntry } from 'astro:content'
const Data = await getEntry('company', 'company')
const data = Data.data.section3
---

<div class='w-full py-24 flex items-center justify-center'>
  <div class='w-2/6'>
    <h2 class='text-calc text-textblack font-bold'>{data.title1}</h2>
    <div class='h-2 w-20 bg-primary mb-8 rounded-lg'></div>
    <p class='text-lg text-textblack w-8/12'>{data.description1}</p>
  </div>
  <div class='w-2/6'>
    <h2 class='text-0calc text-textblack font-bold mb-7'>{data.title2}</h2>
    <p class='text-lg text-textblack'>{data.description2}</p>
    <button
      class='flex bg-white py-2 px-3 text-primary items-center mt-10 gap-x-2 shadow-md rounded-lg hover:-translate-y-1'
      style='font-family: Roboto;'
    >
      {data.button}
      <img src='/assets/images/arrowright.svg' height='20px' width='20px' />
    </button>
  </div>
</div>
