---
import { getEntry } from 'astro:content'

const Data = await getEntry('ManageYourData', 'manageyourdata')
const data = Data.data.TopSection
const button = Data.data.button
---

<div class='container-top min-h-screen w-full flex items-center justify-center'>
  <div class='text-container w-2/5'>
    <h1 class='text-2calc font-bold mb-8 text-textblack'>{data.title}</h1>
    <p class='text-lg w-11/12 text-textblack'>{data.description}</p>
    <a href='/StartFreeTrail'>
      <button
        class='custom-button bg-primary hover:bg-[#30abab] px-3 py-2 duration-700 text-white rounded-lg shadow-md flex text-base items-center gap-x-2 mt-14'
        style='font-family: Roboto;'
      >
        {button}
        <img
          class='button-img'
          src='/assets/images/arrowright.svg'
          alt='Arrow right'
        />
      </button>
    </a>
  </div>
  <div class='img-container w-[36%] h-auto flex items-center justify-center'>
    <img
      src='/assets/images/rundata3.png'
      class='h-full w-full object-contain'
      alt='Description of image'
    />
  </div>
</div>

<style>
  .custom-button:hover {
    background-color: #30baba;
  }

  .button-img {
    filter: brightness(0) invert(1);
  }
  @media (max-width: 440px) {
    .container-top {
      width: 100%;
      height: auto;
      padding-left: 15px;
      padding-right: 15px;
      padding-top: 30px;
      padding-bottom: 30px;
      flex-direction: column;
    }
    .text-container {
      width: 100%;
      margin-bottom: 20px;
    }
    .img-container {
      width: 100%;
      height: auto;
    }
  }
</style>
