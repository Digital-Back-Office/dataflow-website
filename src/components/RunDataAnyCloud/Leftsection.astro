---
const{logo,title,image} = Astro.props
import { getEntry } from "astro:content";
const Data = await getEntry("RunDataAnyCloud", "data");
const button = Data.data.button2
---
<div class="w-full h-screen  flex justify-center items-center">
    <div class="w-2/5 h-4/5 bg-white flex flex-col items-start justify-start pl-10 pr-[3%] pt-20 overflow-hidden">
        <div class="toplogo w-[40%] mb-1">
            <img src={logo} alt="Logo" />
        </div>
        <p class="centertitle text-calc font-bold text-start text-[#303030]  mb-10" style="font-family: Arimo;">
            {title}
        </p>
        <a href="learn">
            <button class="bottombutton custom-button bg-white px-3 py-2 duration-300 text-[#30BABA] rounded-lg shadow-md flex text-base items-center gap-x-2 hover:-translate-y-1" style="font-family: Roboto;">
                {button} <img class="button-img" src="/assets/images/arrowright.svg" alt="Arrow Right" />
            </button>
        </a>
    </div>
    <div class="w-2/5 h-full flex items-center justify-center">
        <img class="w-[30vw] h-[30vw]" src={image}/>
    </div>
    
</div>
<style>
    .custom-button:hover {
    background-color: #30BABA; /* Change button background color */
    color: white; /* Change text color */
}

.custom-button:hover .button-img {
    filter: brightness(0) invert(1); 
}
</style>