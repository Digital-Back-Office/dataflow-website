---
import { getEntry } from 'astro:content'

const Data = await getEntry('all-members', 'all-members')
const data = Data.data.topsection
---

<div class='container-top w-full min- py-24 flex items-center justify-center'>
  <div class='text-container w-6/12'>
    <h1 class='text-2calc font-bold mb-[5%] text-textblack w-11/12'>
      {data.title}
    </h1>
    <p class='text-lg w-11/12 text-textblack'>{data.description}</p>
  </div>
  <div class='w-[25%] img-container'>
    <img src='/assets/images/Allmembersimage1.png' class='img-container' />
  </div>
</div>
<style>
  @media (max-width: 500px) {
    .container-top {
      width: 100%;
      height: auto;
      padding-left: 15px;
      padding-right: 15px;
      padding-top: 30px;
      padding-bottom: 30px;
      flex-direction: column;
    }
    .text-container {
      width: 100%;
      margin-bottom: 20px;
    }
    .img-container {
      width: 100%;
      height: auto;
    }
  }
</style>
