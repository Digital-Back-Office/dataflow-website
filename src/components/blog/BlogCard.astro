---
const { uploadtime, title, description, image, readMoreLink } = Astro.props
---

<div
    class='2xl:w-[350px] xl:w-[320px] w-[240px] lg:w-[300px] md:w-[350px] bg-[#F6F9FC] shadow-md rounded-3xl mb-5 overflow-hidden grid gap-4'
>
    {image && <img src={image} alt='Image' />}
    <div class='w-full p-7 flex flex-col items-start'>
        <p class='text-gray-500 text-base mb-3'>{uploadtime}</p>
        <h3 class='text-lg font-bold text-[#434A57] mb-3'>{title}</h3>
        <p class='text-gray-500 text-base mb-3'>{description}</p>
        <a href={readMoreLink} class='flex w-full group'>
            <p
                class='transition-all transition-700 group-hover:text-secondary group-hover:text-[17px] text-base font-semibold text-primary mr-1'
            >
                Read More
            </p>
            <span>
                <img
                    class='button-img'
                    src='/assets/images/arrowright.svg'
                    alt='Arrow Right'
                />
            </span>
        </a>
    </div>
</div>
