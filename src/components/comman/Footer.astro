---
import { getEntry } from "astro:content";
const Data = await getEntry("comman", "footerheader");

 const footer = Data.data.footer;
---


<footer>
  <div class="h-16 w-full flex items-center justify-center bg-[#2FB7B8]">
    <p class="text-base font-normal text-white decoration-white">
      {footer.finance}
      <span >
      <button class="duration-300 underline underline-offset-8 text-[17px] hover:text-lg" >{footer.finance_underline}</button>
      </span>
    </p>
    </div>			  
  <div class="w-full h-[400px] flex  px-[15%]">
    <div class="w-full h-[400px] bg-white flex pt-[50px]">
      <div class="w-[30%] h-full flex flex-col flex flex-col items-start justify-start">
      <img src="/assets/images/greenlogo.png" class="h-12"/>
      <p class="text-xs text-[#858C97] mt-5 w-5/6">{footer. description}</p>
      <div class=" w-4/5  mt-6">
        <button class=" ease-in h-7 w-7 rounded-full bg-[#F6F0E1] hover:bg-[#30BABA] p-2"><img src="/assets/images/instagram.png"/></button>
        <button class="h-7 w-7 rounded-full bg-[#F6F0E1] hover:bg-[#30BABA] ml-3 p-2"><img src="/assets/images/facebook.png" /></button>
        <button class="h-7 w-7 rounded-full bg-[#F6F0E1] hover:bg-[#30BABA] ml-3 p-2"><img src="/assets/images/linkedin.png" /></button>
      </div>
      <p class="text-[#858C97] text-xs mt-10">{footer.copyrights}</p>
      </div>
      <div class="w-[20%] h-full flex flex-col items-start">
      <div class="w-full h-[50%]">
      <h6 class="text-base font-bold text-[#434A57]" style=" font-family: Archivo Narrow;" >{footer.head1}</h6>
        <button><p class="text-base font-thin text-[#434A57] hover:text-[#30BABA]"  style=" font-family: Archivo Narrow;" >{footer.head1nav1}</p></button>
      </div>
      <button><h6 class="text-base font-bold text-[#434A57] hover:text-[#30BABA]" style=" font-family: Archivo Narrow;" >{footer.head2}</h6></button>
    <button><p class="text-base font-thin text-[#434A57] hover:text-[#30BABA]"  style=" font-family: Archivo Narrow;" >{footer.head2nav1}</p></button>
  <button><p class="text-base font-thin text-[#434A57] hover:text-[#30BABA]"  style=" font-family: Archivo Narrow;" >{footer.head2nav2}</p></button>
      </div>
      <div class="w-[25%] h-full flex flex-col items-start">
      <div class="w-full h-[50%] flex flex-col items-start">
      <button class="text-base font-bold text-[#434A57] hover:text-[#30BABA]" style=" font-family: Archivo Narrow;" >{footer.head3}</button>
      <button class="text-base font-thin text-[#434A57] hover:text-[#30BABA]"  style=" font-family: Archivo Narrow;" >{footer.head3nav1}</button>
      <button class="text-base font-thin text-[#434A57] hover:text-[#30BABA]"  style=" font-family: Archivo Narrow;" >{footer.head3nav2}</button>
      </div>
      <button class="text-base font-bold text-[#434A57] hover:text-[#30BABA] " style=" font-family: Archivo Narrow;" >{footer.head4}</button>
      <button class="text-base font-thin text-[#434A57] hover:text-[#30BABA]"  style=" font-family: Archivo Narrow;" >{footer.head4nav1}</button>
      <button class="text-base font-thin text-[#434A57] hover:text-[#30BABA]"  style=" font-family: Archivo Narrow;" >{footer.head4nav2}</button>
      </div>
      <div class="w-[25%] h-full flex flex-col  items-end">
      <div class="flex flex-col items-start">
      <button class="text-base font-thin text-[#434A57] hover:text-[#30BABA]"  style=" font-family: Archivo Narrow;" >{footer.phone1}</button>
      <button class="text-base font-thin text-[#434A57] hover:text-[#30BABA]"  style=" font-family: Archivo Narrow;" >{footer.phone2}</button>
      <button class="text-base font-thin text-[#434A57] hover:text-[#30BABA]"  style=" font-family: Archivo Narrow;" >{footer.email}</button>
      </div>
      </div>
      <div></div>
      <div></div>
    </div>
    <div></div>
    <div></div>
    </div>
</footer>