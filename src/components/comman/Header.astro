---
import { getEntry } from "astro:content";
const Data = await getEntry("comman", "footerheader");
const header = Data.data.header;
---

<header class="h-20 w-full flex items-center justify-between bg-[#30BABA] px-[7%] ">
  <a href="/"><img src="/assets/images/logoheader.png" class="h-10"/></a>
  
  <nav class="hidden md:flex h-20 w-7/12 items-center justify-center">
    <div class="h-20 w-4/5 flex items-center justify-between ">
      <a href="/"> <p class="text-white text-base font-medium hover:border-b-2 border-white" style="font-family: Arial, Helvetica, sans-serif">{header.nav1}</p> </a>
      <a href="/Pricing"> <p class="text-white text-base font-medium hover:border-b-2 border-white" style="font-family: Arial, Helvetica, sans-serif">{header.nav2}</p> </a>
      <a href="/learn"> <p class="text-white text-base font-medium hover:border-b-2 border-white" style="font-family: Arial, Helvetica, sans-serif">{header.nav3}</p> </a>
      <a href="/Company"> <p class="text-white text-base font-medium hover:border-b-2 border-white" style="font-family: Arial, Helvetica, sans-serif">{header.nav4}</p> </a>
      <a href="/blog"> <p class="text-white text-base font-medium hover:border-b-2 border-white" style="font-family: Arial, Helvetica, sans-serif">{header.nav5}</p> </a>
    </div>
  </nav>
  
  <a href="/BookDemo" class="hidden md:block">
    <button class="ease-in duration-300 px-[20px] py-[8px] bg-white rounded-md text-base font-medium border-2 shadow-md text-[#30BABA] ml-10 hover:bg-[#30BABA] hover:text-white hover:translate-y-1" style="font-family: Arial, Helvetica, sans-serif">{header.button}</button>
  </a>
  
  <div class="md:hidden flex items-center">
    <button id="burgerMenuButton" class="text-white focus:outline-none">
      <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>
      </svg>
    </button>
  </div>
</header>

<div id="mobileMenu" class="fixed top-0 left-0 w-full h-full bg-[#30BABA] transform -translate-x-full transition-transform duration-300 ease-in-out z-50">
  <div class="h-20 w-full flex items-center justify-between px-4">
    <a href="/"><img src="/assets/images/logoheader.png" class="h-10"/></a>
    <button id="closeMenuButton" class="text-white focus:outline-none">
      <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
      </svg>
    </button>
  </div>
  <nav class="flex flex-col items-center mt-10">
    <a href="/" class="text-white text-base font-medium py-2" style="font-family: Arial, Helvetica, sans-serif">{header.nav1}</a>
    <a href="#" class="text-white text-base font-medium py-2" style="font-family: Arial, Helvetica, sans-serif">{header.nav2}</a>
    <a href="/learn" class="text-white text-base font-medium py-2" style="font-family: Arial, Helvetica, sans-serif">{header.nav3}</a>
    <a href="/Company" class="text-white text-base font-medium py-2" style="font-family: Arial, Helvetica, sans-serif">{header.nav4}</a>
    <a href="/blog" class="text-white text-base font-medium py-2" style="font-family: Arial, Helvetica, sans-serif">{header.nav5}</a>
    <a href="/BookDemo">
      <button class="ease-in duration-300 px-[20px] py-[8px] bg-white rounded-md text-base font-medium border-2 shadow-md text-[#30BABA] mt-4 hover:bg-[#30BABA] hover:text-white hover:translate-y-1" style="font-family: Arial, Helvetica, sans-serif">{header.button}</button>
    </a>
  </nav>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const burgerMenuButton = document.getElementById('burgerMenuButton');
    const mobileMenu = document.getElementById('mobileMenu');
    const closeMenuButton = document.getElementById('closeMenuButton');

    burgerMenuButton.addEventListener('click', () => {
      mobileMenu.classList.remove('-translate-x-full');
      mobileMenu.classList.add('translate-x-0');
    });

    closeMenuButton.addEventListener('click', () => {
      mobileMenu.classList.remove('translate-x-0');
      mobileMenu.classList.add('-translate-x-full');
    });
  });
</script>

<style>
  @media (max-width: 470px) {
    .md\\:hidden {
      display: block;
    }
  }
</style>
