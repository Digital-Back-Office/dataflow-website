---
import { getEntry } from 'astro:content'

const Data = await getEntry('company', 'company')
const data = Data.data.section1
const button = Data.data.button
---

<div class='container-top w-full py-24 flex items-center justify-center'>
  <div class='text-container w-6/12'>
    <h1
      class='text-4xl max-sm:text-3xl tracking-wide leading-tight font-bold mb-[5%] max-sm:mb-10 text-textblack w-11/12 max-sm:w-full'
    >
      {data.title}
    </h1>
    <p class='text-lg w-11/12 text-textblack'>{data.description}</p>
  </div>
  <div class='w-[30%] img-container'>
    <img src='/assets/images/companysection1image.png' class='img-container' />
  </div>
</div>
<style>
  .custom-button:hover {
    background-color: #30baba;
  }

  .button-img {
    filter: brightness(0) invert(1);
  }
  @media (max-width: 500px) {
    .container-top {
      width: 100%;
      height: auto;
      padding-left: 15px;
      padding-right: 15px;
      padding-top: 30px;
      padding-bottom: 30px;
      flex-direction: column;
    }
    .text-container {
      width: 100%;
      margin-bottom: 20px;
    }
    .img-container {
      width: 100%;
      height: auto;
    }
  }
</style>
