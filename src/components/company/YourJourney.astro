---
import { getEntry } from 'astro:content'
import Card from './Card.astro'
const Data = await getEntry('company', 'company')
const data = Data.data.section4
---

<div class='w-full py-20 pt-10 flex flex-col items-center justify-center max-sm:px-[20px]'>
  <h3 class='text-8calc text-textblack text-center max-sm:text-left font-bold mb-12'>
    {data.title}
  </h3>
  <div class='w-[80%] max-sm:w-full flex flex-wrap justify-center items-center gap-4'>
    <Card
      image='/assets/images/companysection4logo1.png'
      title={data.featuretitle1}
      description={data.featuredescription1}
    />
    <Card
      image='/assets/images/companysection4logo2.png'
      title={data.featuretitle2}
      description={data.featuredescription2}
    />
    <Card
      image='/assets/images/companysection4logo3.png'
      title={data.featuretitle3}
      description={data.featuredescription3}
    />
    <Card
      image='/assets/images/companysection4logo4.png'
      title={data.featuretitle4}
      description={data.featuredescription4}
    />
    <Card
      image='/assets/images/companysection4logo5.png'
      title={data.featuretitle5}
      description={data.featuredescription5}
    />
    <Card
      image='/assets/images/companysection4logo6.png'
      title={data.featuretitle6}
      description={data.featuredescription6}
    />
  </div>
</div>
