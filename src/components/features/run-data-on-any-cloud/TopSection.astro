      </div>
    </div>
  </div>
</div>

<style>
  @media (max-width: 440px) {
    .container-top {
      width: 100%;
      height: auto;
      padding-left: 15px;
      padding-right: 15px;
      padding-top: 30px;
      padding-bottom: 30px;
      flex-direction: column;
    }
  }

  .button-img {
    filter: brightness(0) invert(1);
  }

  .scroll {
    display: flex;
    align-items: center;
    overflow: hidden;
  }

  .scroll div {
    white-space: nowrap;
    animation: scroll var(--time) linear infinite;
    /* animation-delay: calc(var(--time) * -1); */
  }

  .scroll img {
    max-height: 60px;
  }

  /* .scroll div:nth-child(2) {
    animation: scroll2 var(--time) linear infinite;
    animation-delay: calc(var(--time) / -2);
  } */

  @keyframes scroll {
    0% {
      transform: translateX(0%);
    }

    100% {
      transform: translateX(-90%);
    }
  }

  @keyframes scroll2 {
    0% {
      transform: translateX(0);
    }

    100% {
      transform: translateX(-200%);
    }
  }

  .scroll div span:hover {
    background: #3fd2f9;
    cursor: pointer;
  }

  .imgBox div {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .imgBox img {
    max-width: 200px;
    scale: 0.8;
  }
</style>
