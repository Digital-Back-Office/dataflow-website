---
import { getEntry } from 'astro:content'

const Data = await getEntry('features', 'run-data-on-any-cloud')
const data = Data.data.TopSection
const button = Data.data.button1
---

<div
  class='container-top min-h-screen w-full py-10 pt-16 flex items-center justify-center max-sm:justify-start  max-sm:min-h-max'
>
  <div class='w-2/5 flex flex-col gap-6 max-sm:w-[90%] '>
    <h1
      class='text-4xl max-sm:text-2xl leading-normal tracking-wide font-bold text-textblack'
    >
      {data.title}
    </h1>
    <p class='text-lg max-sm:text-sm w-11/12 text-textblack leading-tight'>
      {data.description}
    </p>
    <a
      href='/start-free-trail'
      class='w-max bg-primary px-3 py-2 text-white rounded-lg shadow-md flex text-base items-center gap-x-2 hover:bg-[#0AA3A3]'
    >
      {button}
      <img
        class='invert brightness-0 size-[20px]'
        src='/assets/images/arrowright.svg'
      />
    </a>
  </div>
  <div class='img-container max-sm:hidden w-2/5 bg-white h-auto'>
    <img
      src='/assets/images/runanycloud.png'
      class='transition-all duration-400 ease-in-out group-hover:scale-125'
    />
  </div>
</div>
<div class='h-[200px] w-full flex justify-center items-center'>
  <div
    class='z-10 w-[70%] overflow-x-hidden h-max flex items-center justify-center relative'
  >
    <!-- Infinite Scrolling effect -->
    <div
      class='h-full w-24 max-sm:w-12 bg-gradient-to-r from-white to-white/10 absolute top-0 left-0 z-40'
    >
    </div>
    <div
      class='h-full w-24 max-sm:w-12 bg-gradient-to-r to-white from-white/10 absolute top-0 right-0 z-40'
    >
    </div>

    <!-- Company logos -->
    <div class='scroll imgBox z-0' style='--time: 20s'>
      <div class='flex items-center gap-3'>
        <img src='/assets/images/awslogo.png' alt='Logo' />
        <img src='/assets/images/googlecloudlogo.png' alt='Logo' />
        <img src='/assets/images/snowflake-company.png' alt='Logo' />
        <img src='/assets/images/awslogo.png' alt='Logo' />
        <img src='/assets/images/googlecloudlogo.png' alt='Logo' />
        <img src='/assets/images/azurelogo.png' alt='Logo' />
        <img src='/assets/images/snowflake-company.png' alt='Logo' />
        <img src='/assets/images/awslogo.png' alt='Logo' />
        <img src='/assets/images/googlecloudlogo.png' alt='Logo' />
        <img src='/assets/images/snowflake-company.png' alt='Logo' />
        <img src='/assets/images/azurelogo.png' alt='Logo' />
        <img src='/assets/images/snowflake-company.png' alt='Logo' />
        <img src='/assets/images/awslogo.png' alt='Logo' />
        <img src='/assets/images/googlecloudlogo.png' alt='Logo' />
        <img src='/assets/images/snowflake-company.png' alt='Logo' />
        <img src='/assets/images/azurelogo.png' alt='Logo' />
      </div>
      <div class='flex items-center gap-3 ml-3'>
        <img src='/assets/images/awslogo.png' alt='Logo' />
        <img src='/assets/images/googlecloudlogo.png' alt='Logo' />
        <img src='/assets/images/snowflake-company.png' alt='Logo' />
