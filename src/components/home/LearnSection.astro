---
import RingAnimation from '../comman/RingAnimation.astro'
import { getEntry } from 'astro:content'

const Data = await getEntry('Home', 'home')
const data = Data.data.LearnSection
---

<div class='w-full h-auto flex justify-center'>
  <div
    class='ring-animation-container w-6/12 overflow-hidden flex items-center justify-center'
  >
    <RingAnimation />
  </div>
  <div
    class='responsive-container w-5/12 py-32 flex flex-col justify-center items-start'
  >
    <p
      class='font-extrabold text-textPrimary text-5calc font-helvetica-neue leading-none mb-8 w-3/4 max-sm:w-[90%] max-sm:text-left'
    >
      {data.title}
    </p>
    <div class='scroller'>
      <div class='text'>
        <p
          class='font-bold text-7calc leading-none italic text-[#30BABA]'
          style='font-family: Roboto;'
        >
          {data.features[0]}
        </p>
      </div>
      <div class='text'>
        <p
          class='font-bold text-7calc leading-none italic text-[#FFA500]'
          style='font-family: Roboto;'
        >
          {data.features[1]}
        </p>
      </div>
      <div class='text'>
        <p
          class='font-bold text-7calc leading-none italic text-[#4169E1]'
          style='font-family: Roboto;'
        >
          {data.features[2]}
        </p>
      </div>
      <div class='text'>
        <p
          class='font-bold text-7calc leading-none italic text-[#32CD32]'
          style='font-family: Roboto;'
        >
          {data.features[3]}
        </p>
      </div>
      <div class='text'>
        <p
          class='font-bold text-7calc leading-none italic text-[#FFD700]'
          style='font-family: Roboto;'
        >
          {data.features[4]}
        </p>
      </div>
    </div>
    <a href='/Apps'>
      <button
        class='custom-button text-white px-3 py-2 duration-400 bg-primary hover:bg-primaryHover rounded-lg shadow-md flex text-base items-center gap-x-2 mt-14'
      >
        {Data.data.ViewMoreButton}
        <img class='icon' src='/assets/images/arrowright.svg' />
      </button>
    </a>
  </div>
</div>
<style>
  .scroller {
    overflow: hidden;
    position: relative;
    width: 100%;
    height: 120px;
  }

  .text {
    position: absolute;
    width: 100%;
    top: 100%;
    animation: scroll 10s infinite;
  }

  .text:nth-child(1) {
    animation-delay: 0s;
  }

  .text:nth-child(2) {
    animation-delay: 2s;
  }

  .text:nth-child(3) {
    animation-delay: 4s;
  }

  .text:nth-child(4) {
    animation-delay: 6s;
  }

  .text:nth-child(5) {
    animation-delay: 8s;
  }

  @keyframes scroll {
    0% {
      top: 100%;
      opacity: 0;
    }
    10% {
      top: 10%;
      opacity: 1;
    }
    30% {
      top: 10%;
      opacity: 0;
    }
    40% {
      top: 0%;
      opacity: 0;
    }
    100% {
      top: 0%;
      opacity: 0;
    }
  }

  .icon {
    filter: brightness(0) invert(1);
  }

  /* Custom media query to hide RingAnimation below 1060px */
  @media (max-width: 1059px) {
    .ring-animation-container {
      display: none;
    }
    .responsive-container {
      width: 100%;
      align-items: center;
      max-width: 300px;
      text-align: center;
    }
  }
</style>
