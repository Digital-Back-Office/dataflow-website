  <!-- How it works (Steps) -->
  <section
    id="cont11"
    class="section"
    style="background-color: #FBE2F0;"
  >
    <div class="container">
      <div class="cont">
        <!--Text-->
        <div id="cont-text" class="cont-text">
          <h4 id="cont-heading" class="cont-heading">Run Dataflow on any cloud</h4>
          <p id="cont-para" class="cont-para">
            Thanks to our platform, developed using advanced data management
            methods, data quality reaches 100%, which is 20% better than other
            platforms.
          </p>
          <a href="#" class="learn-btn">
            Learn More<i class="ai-arrow-right ms-2"></i>
          </a>
        </div>
  
        <!--Image-->
        <div style="width: 54.97%;" class="cont-img">
          <img id="cont-img" src="/assets/images/home/img1.png" 
          style="transition: all 0.25s ease-in; transform-origin: right; width:100%;"/>
        </div>
      </div>
    </div>
  </section>
  
  <script>
      const cont = document.getElementById("cont11") as HTMLElement;
      const contHeading = document.getElementById("cont-heading") as HTMLElement;
      const contPara = document.getElementById("cont-para") as HTMLElement;
      const contText = document.getElementById("cont-text") as HTMLElement;
      const contImage = document.getElementById("cont-img") as HTMLImageElement;
      
      cont.addEventListener("mouseover", ()=>{
        cont.classList.add("cont-hover");
        contHeading.classList.add("cont-heading-hover");
        contPara.classList.add("cont-para-hover");
        contText.classList.add("cont-text-hover");
        contImage.style.scale = "1.1";
      })
  
      cont.addEventListener("mouseleave", ()=>{
        cont.classList.remove("cont-hover");
        contHeading.classList.remove("cont-heading-hover");
        contPara.classList.remove("cont-para-hover");
        contText.classList.remove("cont-text-hover");
        contImage.style.scale = "1";
  
      })
  </script>