    }
    .cont-text {
      width: fit-content;
      width: 33.43%;
      display: flex;
      flex-direction: column;
      gap:2rem;
    }
    .cont-heading {
      font-size: 2.8125rem;
      color: #303030;
      font-weight: 700;
      line-height: 130%;
      transition: all 0.1s ease-in;
    }
    .cont-para {
      font-size: 1.375rem;
      font-weight: 400;
      line-height: 142%;
      color: var(--neutral-dark);
      transition: all 0.25s ease-in;
  
    }
    .cont-hover{
      background-color: #D40F7D !important;
    }
    .cont-heading-hover{
      color: white !important;
      font-size: 3.125rem;
      transition: all 0.25s ease-in;
  
