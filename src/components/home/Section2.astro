<!-- How it works (Steps) -->
<section
  id="cont2"
  class="section"
  style="background-color: #FCF5DE;"
>
  <div class="container">
    <div class="cont">
      <!--Text-->
      <div id="cont-text2" class="cont-text">
        <h4 id="cont-heading2" class="cont-heading">Manage your data connection across tools</h4>
        <p id="cont-para2" class="cont-para">
          Thanks to our platform, developed using advanced data management
          methods, data quality reaches 100%, which is 20% better than other
          platforms.
        </p>
        <a href="#" class="learn-btn">
          Learn More<i class="ai-arrow-right ms-2"></i>
        </a>
      </div>

      <!--Image-->
      <div style="width: 54.97%;" class="cont-img">
        <img id="cont-img2" src="/assets/images/home/img1.png" 
        style="transition: all 0.25s ease-in; transform-origin: left; width:100%;"/>
      </div>
    </div>
  </div>
</section>

<script>
    const cont = document.getElementById("cont2") as HTMLElement;
    const contHeading = document.getElementById("cont-heading2") as HTMLElement;
    const contPara = document.getElementById("cont-para2") as HTMLElement;
    const contText = document.getElementById("cont-text2") as HTMLElement;
    const contImage = document.getElementById("cont-img2") as HTMLImageElement;
    
    cont.addEventListener("mouseover", ()=>{
      cont.classList.add("cont-hover");
      contHeading.classList.add("cont-heading-hover");
      contPara.classList.add("cont-para-hover");
      contText.classList.add("cont-text-hover");
      contImage.style.scale = "1.1";
    })

    cont.addEventListener("mouseleave", ()=>{
      cont.classList.remove("cont-hover");
      contHeading.classList.remove("cont-heading-hover");
      contPara.classList.remove("cont-para-hover");
      contText.classList.remove("cont-text-hover");
      contImage.style.scale = "1";

    })
</script>