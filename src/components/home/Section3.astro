<style>
    .hello {
      transform-origin: left;
    }
    .cont {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    .cont-text {
      width: fit-content;
      max-width: 450px;
      display: flex;
      flex-direction: column;
      gap:2.5rem;
    }
    .cont-heading {
      font-size: 2.8125rem;
      color: #303030;
