      line-height: 142%;
      color: var(--neutral-dark);
      transition: all 0.25s ease-in;
  
    }
    .cont-hover{
      background-color: #4578FC !important;
    }
    .cont-heading-hover{
      color: white !important;
      font-size: 3.125rem;
      transition: all 0.25s ease-in;
  
    }
    .cont-para-hover{
      color: white !important;
      font-size: 1.5625rem;
      transform-origin: left;
    }
    .section{
      transition: all 0.25s ease-in;
      min-height: 100vh !important;
      display: flex;
      align-items: center;
    }
    .cont-text-hover{
      gap: 3.125rem;
      transition: all 0.25s ease-in;
  
    }
    .learn-btn{
      background-color: #E1E6FA;
      width: fit-content;
      border-radius: 10px;
      padding: 10px;
      text-decoration: none;
    }
