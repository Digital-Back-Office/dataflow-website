      background-color: white;
    }
  </style>
  
  <!-- How it works (Steps) -->
  <section
    id="cont3"
    class="overflow-hidden pt-5 pb-5 section"
    style="background-color: #E1E6FA;"
  >
    <div class="container">
      <div class="cont">
        <!--Text-->
        <div id="cont-text3" class="cont-text">
          <h4 id="cont-heading3" class="cont-heading">Say goodbye to Python dependency hell</h4>
          <p id="cont-para3" class="cont-para">
            Thanks to our platform, developed using advanced data management
            methods, data quality reaches 100%, which is 20% better than other
            platforms.
          </p>
          <a href="#" class="learn-btn">
            Learn More<i class="ai-arrow-right ms-2"></i>
          </a>
        </div>
  
        <!--Image-->
        <div>
          <img id="cont-img3" src="/assets/images/home/img1.png" width="687" 
          style="transition: all 0.25s ease-in; transform-origin: right;"/>
        </div>
      </div>
    </div>
  </section>
  
  <script>
      const cont = document.getElementById("cont3") as HTMLElement;
      const contHeading = document.getElementById("cont-heading3") as HTMLElement;
      const contPara = document.getElementById("cont-para3") as HTMLElement;
      const contText = document.getElementById("cont-text3") as HTMLElement;
      const contImage = document.getElementById("cont-img3") as HTMLImageElement;
      
      cont.addEventListener("mouseover", ()=>{
        cont.classList.add("cont-hover");
        contHeading.classList.add("cont-heading-hover");
        contPara.classList.add("cont-para-hover");
        contText.classList.add("cont-text-hover");
        contImage.style.scale = "1.1";
      })
  
      cont.addEventListener("mouseleave", ()=>{
        cont.classList.remove("cont-hover");
        contHeading.classList.remove("cont-heading-hover");
        contPara.classList.remove("cont-para-hover");
        contText.classList.remove("cont-text-hover");
        contImage.style.scale = "1";
  
      })
  </script>