---
import { getEntry } from 'astro:content'

const Data = await getEntry('Home', 'home')
const data = Data.data.Seventy
---

<div class='w-full py-36 flex flex-col items-center justify-center'>
  <p class='text-3calc font-extrabold leading-none bg-fixed-text text-center'>
    {data.title}
  </p>
  <p class='text-2calc max-sm:text-1calc max-sm:mt-4 font-bold  text-[#364152] text-center tracking-wider'>
    {data.description}
  </p>
</div>
<style>
  .bg-fixed-text {
    background-attachment: fixed;
    background-image: url('/assets/images/seventy-bg.png');
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
    background-repeat: repeat;
  }
</style>
