---
import Footer from '../components/common/Footer.astro'
import Header from '../components/common/Header.astro'
import 'aos/dist/aos.css'

import '../styles/global.css'
export interface Props {
  title?: string
}

const { title = 'Dataflow | AI ready data platform' } = Astro.props
---

<script src='/src/scripts/aos-init.js'></script>
<script src='/src/scripts/cookie-consent.js'></script>
<!-- <script src="/src/scripts/chat-bot.js"></script> -->
<html lang='en' data-bs-theme='light'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <link rel='icon' type='image/x-icon' href='/favicon.png' />
    <link rel='stylesheet' href='/assets/css/theme.min.css' />
    <link rel='stylesheet' href='/assets/icons/around-icons.min.css' />
    <!-- Import Google font (Inter) -->
    <link
      href='https://fonts.googleapis.com/css2?family=Helvetica+Neue:wght@400;700&display=swap'
      rel='stylesheet'
    />
    <link
      href='https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap'
      rel='stylesheet'
    />
    <link
      href='https://fonts.googleapis.com/css2?family=Arimo&display=swap'
      rel='stylesheet'
    />
    <link
      rel='stylesheet'
      href='https://fonts.googleapis.com/css2?family=Archivo+Narrow:wght@400;700&display=swap'
    />
    <link rel='preconnect' href='https://fonts.googleapis.com' />
    <link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />
    <link
      href='https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap'
      rel='stylesheet'
      id='google-font'
    />

    <title>{title}</title>
    <!-- Open Graph Meta Tags -->
    <meta property='og:title' content='Dataflow | AI ready data platform' />
    <meta
      property='og:description'
      content='AI ready data platform in less than 30 minutes'
    />
    <meta property='og:image' content='https://dataflow.zone/og-image.png' />
    <meta property='og:url' content='https://dataflow.zone' />
    <meta property='og:type' content='website' />
    <meta property='og:site_name' content='dataflow.zone' />
  </head>
  <body id='body' class='font-arimo'>
    <Header />
    <div class=''>
      <slot />
    </div>
    <Footer />
    <script src='/assets/js/theme.min.js' is:inline></script>
    <script
      src='https://cdn.jsdelivr.net/npm/masonry-layout@4.2.2/dist/masonry.pkgd.min.js'
      integrity='sha384-GNFwBvfVxBkLMJpYMOABq3c+d3KnQxudP/mGPkzpZSTYykLBNsZEnG2D9G/X/+7D'
      crossorigin='anonymous'
      async></script>
  </body>
</html>
