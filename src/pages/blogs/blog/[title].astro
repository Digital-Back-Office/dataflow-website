---
import Bloglayout from '../../../layouts/Bloglayout.astro'
import { posts } from '../../../content/Blog/data'

export async function getStaticPaths() {
  const blogs = posts
  const paths = blogs.map((blog: any) => {
    return {
      params: {
        title: blog.title.split(' ').join('-').toLowerCase()
      },
      props: blog.title.split(' ').join('-').toLowerCase()
    }
  })
  return paths
}


const {title } = Astro.params
