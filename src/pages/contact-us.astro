---
import Layout from "../layouts/Layout.astro";
---

<style>
  input[type="checkbox"]:checked {
    background-color: rgba(47, 183, 184, 1);
  }
  .contact-section{
    margin-top:5rem;
    margin-bottom: 8rem;
    background-color:var(--grey-100); 
    border-radius:36px;
  }
  .submit-btn{
    width:100%;
    border-radius: 7px;
    background: #FFF;
    border: solid 1px white;
    display: flex;
    justify-content: center;
    padding: 8px 20px;
    color: var(--primary);
    font-size: 1.125rem;
    font-weight: 700;
    line-height: 20px;
    box-shadow: 0px 1px 4px 0px rgba(0, 0, 0, 0.25);
  }
</style>

<Layout>
  <main class="page-wrapper bg-image" data-pagefind-ignore>
    <!-- Page title + Ð¡ontact form  from contacts-v2.html-->
    <section
      class="container pt-2 pt-lg-5 pb-lg-2 pb-xl-4 py-xxl-5 contact-section"
      data-bs-theme="light"
    >
      <div class="row pb-1 pb-sm-3 pb-lg-4">
        <div class="col-lg-4 pe-xxl-4">
          <!-- Page title -->
          <h1 class="display-2" style="color:var(--primary)">Contact Us</h1>
          <p class="fs-lg pb-4 mb-0 mb-sm-2">
            Get in touch with us by completing the below form or book a 30 mins
            free consultation
          </p>
        </div>

        <div class="col-lg-8 col-xl-7 offset-xl-1">
          <!-- Contact form -->
          <form
            class="row g-4 needs-validation"
            action="https://formsubmit.co/contact@digitalbackoffice.co.uk"
            method="POST"
            novalidate
          >
            {/*Name */}
            <div class="col-sm-6">
              <label style="color:var(--primary)" class="form-label fs-base" for="name">Name</label>
              <input
                class="form-control form-control-lg"
                type="text"
                placeholder="Your name"
                required
                name="Name"
                id="name"
                style="border-radius:18px;"
              />
              <div class="invalid-feedback">Please enter your name!</div>
            </div>
            {/*Email */}
            <div class="col-sm-6">
              <label style="color:var(--primary)" class="form-label fs-base" for="email">Email</label>
              <input
                class="form-control form-control-lg"
                type="email"
                placeholder="Email address"
                required
                name="email"
                id="Email"
                style="border-radius:18px;"
              />
              <div class="invalid-feedback">
                Please provide a valid email address!
              </div>
            </div>
            {/*Company Name */}
            <div class="col-sm-6">
              <label style="color:var(--primary)" class="form-label fs-base" for="phone">Company Name</label>
              <input
                class="form-control form-control-lg"
                type="text"
                placeholder="Your Company Name"
                required
                name="Company-name"
                id="company-name"
                style="border-radius:18px;"
              />
            </div>
            {/*Services */}
            <div class="col-sm-6">
              <label style="color:var(--primary)" class="form-label fs-base" for="location">Service</label>
              <select
                class="form-select form-select-lg"
                id="location"
                name="Service"
                required
                style="border-radius:18px;"
              >
                <option value="" selected disabled hidden style="">
                  <span>Service you are looking for</span>
                </option>
                <option value="Big Data Architecture">Big Data Architecture</option>
                <option value="Big Data DevOps">Big Data DevOps</option>
                <option value="Data Science">Data Science</option>
                <option value="Data Visualization">Data Visualization</option>
                <option value="South America">Other</option>
              </select>
            </div>
            {/*Message*/}
            <div class="col-sm-12">
              <label style="color:var(--primary)" class="form-label fs-base" for="message"
                >How can we help?</label
              >
              <textarea
                class="form-control form-control-lg"
                rows="5"
                placeholder="How can we help?"
                required
                name="Message"
                id="message"
                style="border-radius:18px;"></textarea>
              <div class="invalid-feedback">Please enter your message!</div>
            </div>
            {/*Checkbox */}
            <div class="col-sm-12">
              <div class="form-check form-check-inline">
                <input
                  class="form-check-input"
                  type="checkbox"
                  id="agree"
                  required
                />
                <label class="form-check-label" for="agree"
                  >I agree to the <a
                    class="nav-link d-inline fs-normal text-decoration-underline p-0"
                    href="#">Terms &amp; Conditions</a
                  ></label
                >
              </div>
            </div>
            {/*button */}
            <div class="col-sm-12 pt-2">
              <button
                class="btn btn-lg btn-primary submit-btn"
                type="submit"
                >Send a request</button
              >
            </div>
          </form>
        </div>
      </div>
    </section>
  </main>
</Layout>
