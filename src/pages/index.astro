---
import Hero from "../components/home/Hero.astro";
import Spinner from "../components/home/Spinner.astro";
import Layout from "../layouts/Layout.astro";
import Section1 from "../components/home/Section1.astro";
import Section2 from "../components/home/Section2.astro";
import Section3 from "../components/home/Section3.astro";
import Testimonial from "../components/home/Testimonial.astro";
---

<style>
  .teal-dark-heading{
    color: var(--secondary-dark);
    font-size: 2.5rem;
    font-weight: 700;
  }
  .neutral-dark-text{
    color: var(--neutral-dark);
    font-weight: 400;
    font-size: 1.125rem;
  }
  .teal-primary-btn{
    color: var(--primary);
    text-decoration: none;
    font-size: 1.125rem;
    font-weight: 400;
  }
  .colored-heading{
    background-image: url("assets/images/home/text-bg.png");
    background-repeat: repeat;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-position: center center;
    font-size: 13rem;
    text-align: center;
    width: fit-content;
    margin: auto auto;
}
</style>

<Layout>
  <Hero/>

  <Spinner/>

  <Section1/>

  <Section2/>

  <Section3/>

  <section class="overflow-hidden pt-5 pb-5"
  style="background-color:white; height: 100vh; display:flex; align-items:center;;">
    <h2 class="colored-heading">
      70% increase
    </h2>
  </section>

  <Testimonial/>
  
</Layout>


